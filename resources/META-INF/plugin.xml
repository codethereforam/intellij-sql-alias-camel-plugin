<idea-plugin>
    <id>priv.thinkam.plugins</id>
    <name>sql alias camel</name>
    <version>1.0</version>
    <vendor email="codethereforam@gmail.com" url="http://www.cnblogs.com/thinkam">thinkam</vendor>

    <description>
        给SQL查询语句字段添加驼峰别名，右键选中的文本，可以将“foo_bar, b.foo_foo_bar”转换"foo_bar fooBar, b.foo_foo_bar fooFooBar”
    </description>

    <idea-version since-build="173.0"/>

    <actions>
        <action id="MainAction"
                class="priv.thinkam.plugins.MainAction"
                text="sql alias CamelCase"
                description="给SQL查询语句字段添加驼峰别名">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>
    </actions>

</idea-plugin>