<idea-plugin>
    <id>priv.thinkam.plugins</id>
    <name>line comment to javadoc</name>
    <version>1.0</version>
    <vendor email="codethereforam@gmail.com" url="http://www.cnblogs.com/thinkam">thinkam</vendor>

    <description>
        转换例如'// abc'和'/* abc */'形式的单行注释为javadoc注释
    </description>

    <idea-version since-build="173.0"/>

    <actions>
        <action id="MainAction"
                class="priv.thinkam.plugins.MainAction"
                text="line comment to javadoc"
                description="转换单行注释为javadoc注释">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
            <keyboard-shortcut first-keystroke="ctrl alt 1" keymap="$default"/>
        </action>
    </actions>

</idea-plugin>